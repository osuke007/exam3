<%= form_for(@topic, url: choose_new_or_edit) do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= @topic.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field :title, class: 'form-control input-xs', placeholder: "タイトル"%>
  <br>
  <%= f.text_area :content, class: 'form-control', placeholder: "内容"%>
  <br>
  <%= f.submit "投稿する", class: "btn btn-primary btn-block"  %>
<% end %>
